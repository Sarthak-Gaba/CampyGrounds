<%- include("../partials/header") %>

	<div class="row">
		<h1 style="text-align: center;">Add your own Campground!</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="post">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Camp name" name="Cname">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" placeholder="Camp price" name="Cprice" min="500" step="100">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Image url" name="Cimg">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Add Description" name="Cdesc">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">Add it!</button>
				</div>
			</form>	
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>